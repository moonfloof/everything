<div class="h-entry {{#if data.rating}}h-review {{/if}}{{#if data.posterUrl}}entry-with-poster{{/if}}">
	<div>
	<div class="row">
		<span class="left">🎥</span>
		<span class="right entry-title">
			<a href="/film/{{data.id}}" class="u-uid u-url"><span class="p-name p-item">{{data.title}}</span></a>
			({{data.year}})
		</span>
	</div>

	{{#if data.rating}}
	<div class="row">
		<span class="left">⭐</span>
		<span class="right">
			<strong class="p-rating">{{data.rating}}</strong>
			<small>/ <span class="p-best">10</span></small>
		</span>
	</div>
	{{/if}}

	{{#if data.review}}
		<div class="row">
			<span class="left">💬</span>
			<div class="right e-content">{{{data.review}}}</div>
		</div>
	{{/if}}

	{{#if data.url}}
		<div class="row metadata">
			<span class="left">🔗</span>
			<span class="right">
				Originally posted on
				<strong><a class="right u-watch-of" href="{{data.url}}" target="_blank" rel="noopener">{{data.urlPretty}} {{>svgExternal}}</a></strong>
			</span>
		</div>
	{{/if}}

	<div class="row">
		<span class="left"></span>
		<time
			title="{{data.watched_at}}"
			datetime="{{data.watched_at}}"
			class="right dt-published"
		>
			<small>
				<a href="/film/{{data.id}}" class="u-url u-uid">
					{{data.timeago}}
				</a>
			</small>
		</time>
	</div>

	{{> author }}

	</div>

	{{#if data.posterUrl}}
	<img
		class="entry-poster"
		alt="Film poster for '{{data.title}}'"
		src="{{data.posterUrl}}"
	/>
	{{/if}}
</div>
