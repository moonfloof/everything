<div class="h-entry">
	<div class="u-watch-of h-cite">
	<div class="row">
		<span class="left">📺</span>
		<span class="right">
			<span class="p-name entry-title">{{data.episode_title}}</span>
			<span class="p-author">{{data.series_title}}</span>
		</span>
	</div>

	{{#if data.durationPretty}}
	<div class="row">
		<div class="left">⏱️</div>
		<data class="right p-duration" value="{{data.durationIso}}">it's {{data.durationPretty}} long</data>
	</div>
	{{/if}}
	</div>

	<div class="row">
		<span class="left"></span>
		<time
			title="{{data.created_at}}"
			datetime="{{data.created_at}}"
			class="right dt-published"
		>
			<small>
				<a href="/tv/{{data.id}}" class="u-url u-uid">
					{{data.timeago}}
				</a>
			</small>
		</time>
	</div>

	{{> author }}
</div>
