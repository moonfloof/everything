<div class="h-entry entry-film{{#if film.rating}} h-review{{/if}}{{#if film.heroUrl}} hasimage{{/if}}">
	{{#if film.heroUrl}}
	<div class="image--banner" style="background-image: url({{film.heroUrl}})">
		<div class="image--banner__overlay image--banner__16x9"></div>
	</div>
	{{/if}}
	{{> pageHeader title=film.title url="/films" }}

	{{#if film.rating}}
		<div class="panel margin">
			<div class="header">
				<span class="icon">
				{{#xif film.rating '==' 10}}
					❤️
				{{else}}
					{{#xif film.rating '<' 5}}
						👎
					{{else}}
						👍
					{{/xif}}
				{{/xif}}
				</span>
				<h2 class="title">rating</h2>
			</div>
			<div class="content film-rating">
				<div class="film-rating--stars">
					{{rating}}
				</div>
				<div class="film-rating--text">
					<strong class="p-rating">{{film.rating}}</strong>
					<small>/ <span class="p-best">10</span></small>
				</div>
			</div>
		</div>
	{{/if}}

	{{#if film.review}}
		<div class="panel margin">
			{{> panelHeader icon="💬" title="review" }}
			<div class="content e-content">{{{film.review}}}</div>
		</div>
	{{/if}}

	<div class="panel margin">
		{{> panelHeader title="details" }}
		<div class="content">
			<div class="row">
				<div class="left">📆</div>
				<div class="right">watched on {{watchDate}}</div>
			</div>
			{{#if film.durationPretty}}
			<div class="row">
				<div class="left">⏱️</div>
				<data class="right p-duration" value="{{film.durationIso}}">
					it's {{film.durationPretty}} long
				</data>
			</div>
			{{/if}}
			{{#if film.url}}
			<div class="row">
				<div class="left">🔗</div>
				<div class="right">
					originally posted on
					<strong><a class="right u-watch-of h-cite" href="{{film.url}}" target="_blank" rel="noopener">{{film.urlPretty}} {{>svgExternal}}</a></strong>
				</div>
			</div>
			{{/if}}
		</div>
	</div>

	<time
		title="{{film.watched_at}}"
		datetime="{{film.watched_at}}"
		class="right dt-published"
	>
		<small>
			<a href="/film/{{film.id}}" class="u-url u-uid">
				last updated {{film.timeago}}
			</a>
		</small>
	</time>

	{{> author }}

	{{#if film.heroUrl}}
	<div class="film-attribution">
		<small>
			ℹ️ <strong>Attribution:</strong> The image on this page was retrieved using
			<a href="https://tmdb.org/" target="_blank" rel="noopener">The Movie Database (tmdb.org){{>svgExternal}}</a>
		</small>
	</div>
	{{/if}}
</div>
