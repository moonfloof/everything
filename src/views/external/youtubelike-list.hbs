{{> pageHeader title="Liked YouTube Videos" url="/" }}

{{#xif pagination.page '==' 0}}
<div class="panel margin">
<div class="header link-bar">
	<h2 class="title flex">
		top {{popular.length}} liked youtube channels ({{days}} days)
	</h2>
	<div class="links">
		<a href="/youtube?days=14">14 days</a>
		<a href="/youtube?days=30">30 days</a>
		<a href="/youtube?days=180">180 days</a>
		<a href="/youtube?days=365">365 days</a>
	</div>
</div>

<div class="content">
{{#if popular}}
<table>
	{{#each popular as |channel| }}
	<tr>
		<td class="align-r">
			{{channel.channel}}
		</td>
		<td class="table-flex-1">
			<span class="artist-count" style="width: {{channel.popularityPercentage}}%">
				{{channel.count}}
			</span>
		</td>
	</tr>
	{{/each}}
</table>
{{else}}
<div class="error rounded-panel">
	<p class="lead">I haven't liked any YouTube videos within the last {{days}} days! ðŸ˜­</p>
</div>
{{/if}}

</div>
</div>
{{/xif}}

<div class="panel margin">
	{{> panelHeader title="recently liked youtube videos"}}

	<div class="content">
		{{#each youtubeLikes as |like|}}
			{{> youtubeLike data=like }}
		{{/each}}
	</div>
</div>

{{> pagination pagination=pagination route="/youtube" }}
